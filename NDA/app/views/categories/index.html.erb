<h1> Disaster Categories</h1>

  <table>
      <tr>
        <th> Disasters </th>
      </tr>
      <td><%= link_to 'New Category', new_category_path(@categories) %> </td>

      <% @categories.each do |category| %>
        <tr>

          <td class= "category-name"><td> <% category.title %></td>
          <img src = "<%= category.photo_url %>"/><br>

            <td><%= link_to 'Show', category_path(category) %></td>
            <td> <%= link_to 'Edit', edit_category_path(category) %></td>
            <td><%= link_to 'Delete', category_path(category),
                    method: :delete,
                    data: {confirm: 'Are you sure you want to delete this?'} %> </td>
          </tr>
          <% end %>
        </table>
